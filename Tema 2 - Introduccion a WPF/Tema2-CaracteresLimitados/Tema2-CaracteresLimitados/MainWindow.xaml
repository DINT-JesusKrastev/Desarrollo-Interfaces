<Window x:Class="Tema2_CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres limitados" Height="388" Width="543" Icon="/Resources/Logo.ico">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                <GradientStop Offset="1.0" Color="White" />
                <GradientStop Offset="0.0" Color="#FFFF5454" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox 
            x:Name="textoIntroducidoTextBox"
            HorizontalAlignment="Center" 
            Margin="0,24,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            AcceptsReturn="True"
            VerticalAlignment="Top" 
            Width="481" 
            Height="277" PreviewKeyDown="TextoIntroducidoTexBox_PreviewKeyDown"/>
        <TextBlock 
            x:Name="limiteCaracteresTextBlock"
            HorizontalAlignment="Left" 
            Margin="468,306,0,0" 
            TextWrapping="Wrap" 
            Text="0/140"
            VerticalAlignment="Top" Foreground="#FF888787"/>
    </Grid>
</Window>
